<%= form_for [@event, photo], html: { multipart: true } do |f| %>
  <div class="row justify-content-start">
    <div class="col">
      <%= f.file_field :photo, required: :true, class: "form-control form-control-sm", id: "formFileSm", type: "file" %>
    </div>
    <div class="col">
      <%= f.submit 'Upload event photos', class: "form-button text-center" %>
    </div>
  </div>
<% end %>
</br>
