<% content_for :title do %>Profile <%= @user.name %>
<% end %>
<div class="container px-4 p-5 text-center">
  <div class="section-header">
    <h2><%= @user.name %> Profile</h2>
    <% if @user == current_user %>
      <p><%= link_to 'Edit profile', edit_user_path(@user) %></p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-auto">
      <p><%= link_to 'Create Event', new_event_path, class: "form-button text-center" %></p>
      <%= image_tag user_avatar(@user), class: 'img-fluid', alt: "#{@user.name} photo" %>
    </div>
    <div class="col">
      <% if @user.events.any? %>
        <section id="schedule" class="section-with-bg">
          <div class="container" data-aos="fade-up">
              <h3>Your Events Schedule</h3>
            <div class="tab-content row justify-content-center" data-aos="fade-up" data-aos-delay="200">
              <%= render partial: 'events/event', collection: @user.events %>
            </div>
          </div>
        </section>
      <% else %>
        <h3 class="buffer-top"><%= @user.name %> has not yet created an event</h3>
      <% end %>
    </div>
  </div>
</div>


