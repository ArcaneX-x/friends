<% content_for :title do %>Event -  <%= @event.title %>
<% end %>
<section id="speakers-details">
  <div class="container">
    <div class="section-header text-center">
      <h2><%= @event.title %></h2>
      <% if current_user_can_edit?(@event) %>
        <%= link_to 'Edit event', edit_event_path(@event) %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-6">
        <iframe width="100%" height="300" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6248294.908312829!2d-8.203686765866813!3d40.121669323379045!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xc42e3783261bc8b%3A0xa6ec2c940768a3ec!2sSpain!5e0!3m2!1sen!2skg!4v1670675423446!5m2!1sen!2skg" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
      <div class="col-md-6">
        <div class="details">
          <h2>When: <h3><%= l @event.datetime, format: :long %></h3></h2>
          <h2>Decription: <h3><%= @event.description %></h3></h2>
          <h2>Address: <small><%= link_to @event.address,
                                          "https://yandex.ru/maps/?text=#{@event.address}" %></small></h2>
          <%= link_to 'Back to Profile', current_user, class: "form-button text-center" %>
        </div>
      </div>
    </div>
      <%= render partial: 'comments/comment', collection: @event.comments %>
  </div>
</section>

