<%= form_with model: @event do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :address, class: "form-label" %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :datetime, class: "form-label" %>
    <%= f.datetime_field :datetime, type:"datetime-local", class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="d-grid gap-2 col-6 mx-auto">
    <%= f.submit 'Save', class: 'form-button' %>
  </div>
<% end %>
</br>
<div class="details"><%= button_to 'Delete', @event, method: :delete,
                                   onclick: "return confirmDestroy('Are you sure?')",
                                   class: "btn btn-outline-danger" %>
</div>
